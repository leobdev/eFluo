@model PSUser

@{
    ViewData["Title"] = "Remove Member";
}



<div class="account-content">
    <div class="scrollspy-example" data-spy="scroll" data-target="#account-settings-scroll" data-offset="-100">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 layout-spacing">
                <div id="general-info" method="post" class="section general-info">
                    <div class="info">
                        <h6 class="">Personal Data</h6>
                        <div class="row">
                            <div class="col-lg-11 mx-auto">
                                <div class="row">
                                    <div class="col-xl-10 col-lg-12 col-md-8 mt-md-0 mt-4">
                                        <div class="form">
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <p>Are you sure you want to remove user?</p>
                                                    <div class="avatar avatar-xl">
                                                        @if (Model.AvatarFileData != null)
                                                        {
                                                            <img style="height:100px;max-width:100px;width: expression(this.width > 500 ? 500: true);" src="data:image/*;base64,@(Convert.ToBase64String(Model.AvatarFileData))" class="img-fluid rounded-circle" alt="avatar">
                                                        }
                                                        else
                                                        {
                                                            <span><img style="width:80px;height:80px" src="/img/avatardefault_92824.png" class="img-fluid rounded-circle" alt="avatar"></span>

                                                        }
                                                    </div>
                                                    <div class="flex flex-col">
                                                        @Model.FullName

                                                    </div>
                                                    <br />
                                                    <form asp-action="Delete" class="flex gap-2 items-center">
                                                        <input type="hidden" asp-for="Id" />
                                                        <input type="submit" value="Remove" class="btn btn-danger" />
                                                        <a asp-action="Index" class="btn btn-outline-primary">Back</a>
                                                    </form>
                                                    <p>
                                                    </p>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>


        </div>
    </div>
</div>
